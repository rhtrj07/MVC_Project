@model MVCProject.ViewModels.ProfileViewModel
@using System.Web.Optimization





                
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <div class="col-md-5 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class=" mt-5" width="150px" src="~/"><span class="font-weight-bold">@Model.FName @Model.LName </span><span class="text-black-50">@Model.Email</span><span> </span></div>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Name :</label> @Model.FName</div>
                    <div class="col-md-6"><label class="labels">Surname : </label>@Model.LName </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Gender</label></div>
                    <div class="col-md-6"><label class="labels"> : @Model.Gender</label></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Date Of Birth</label></div>
                    <div class="col-md-6"><label class="labels"> : @Model.DOB.ToString("dd-MMMM-yyyy")</label></div>
                </div>
                <div class="row mt-3">

                    <div class="col-md-6"><label class="labels">Mobile Number </label></div>
                    <div class="col-md-6"><label class="labels"> :  @Model.Mobile </label> </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Address</label></div>
                    <div class="col-md-6"><label class="labels"> : @Model.Address </label></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Location : </label></div>
                    <div class="col-md-6"><label class="labels">: @Model.Location</label></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Email ID : </label> </div>
                    <div class="col-md-6"><label class="labels"> :  @Model.Email </label></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Designation</label></div>
                    <div class="col-md-6"><label class="labels"> :  @Model.Designation </label></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Role</label> </div>
                    <div class="col-md-6"><label class="labels"> :  @Model.Role </label></div>
                </div>

                <a href="/profile/edits"><div class="mt-5 text-center"><button class="btn btn-primary " type="button">Edit Profile</button></div></a>
            </div>
        </div>

    </div>
</div>